<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/absoluteLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customView.ViewMeasureActivity">
    <com.example.mvp.customView.TitleBar
        android:id="@+id/titlebar"
        app:title_text="@string/app_name"
        app:title_text_color="#F00"
        app:title_bg="#CCC"
        android:layout_width="match_parent"
        android:layout_height="60dp"></com.example.mvp.customView.TitleBar>

    <com.example.mvp.customView.CustomButton
        android:visibility="visible"
        android:background="#CCC"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:id="@+id/btnView"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <com.example.mvp.customView.MyTextView
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:background="#CCC"
        android:layout_height="50dp" />
    <com.example.mvp.customView.RectView
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        app:rect_color="#F00"
        android:layout_height="50dp" />

    <com.example.mvp.customView.CounterView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</LinearLayout>